@using DonnWeb.Models.Navigation

@model DropdownNavigationItem

<li class="dropdown">

 <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Model.DisplayText<span class="caret"></span></a>

    <ul class="dropdown-menu">
            @foreach (var item in @Model.ItemCollection)
            {
                <li><a href="@item.Action">@item.DisplayText</a></li>
            }
    </ul>


</li>
